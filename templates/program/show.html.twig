{% extends 'base.html.twig' %}

{% block title %} Serie #{{ program.id }} {% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{ program.poster }}" alt="{{ program.title }} poster">
        <div>
            <div class="media-body">
                <h1 class="mt-0">{{ program.title }}</h1>
                    <p>{{ program.summary }}</p>
                    <p> Category: {{ program.category.name }} </p>
            </div>
            <div class="media-body">
                {% for season in program.seasons %}
                    <p class="mt-0"> <a href="{{ path('program_season_show', { programSlug: program.slug, seasonId: season.id }) }}">Saison {{ season.number }}</a></p>
                {% endfor %}
            </div>
            <div class="media-body">
                <h2>Acteurs :</h2>
                    <ul>
                        {% for actor in program.actors %}
                            <li><a href="{{ path('actor_show', { id: actor.id }) }}">{{ actor.name }} </a> </li>
                        {% else %}
                            <li>No actor for this series</li>
                        {% endfor %}
                    </ul>
            </div>
        </div>
    </div>

    <a href="{{ path('program_index') }}">
        Back to the list of programs
    </a>
    
{% endblock %}